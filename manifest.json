{
  "name": "Skribbl Word Guesser",
  "description": "Never lose again",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.google.com/*"
  ],
  "action": {
    "default_popup": "./popup.html"
  }
}